<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/grey_background"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="24dip"
        android:layout_marginEnd="24dp">

        <Button
            android:id="@+id/btnTicket"
            android:layout_width="match_parent"
            android:layout_height="100dip"
            android:text="TICKET"
            android:layout_marginStart="8dip"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toTopOf="@+id/btnAttendence"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="spread" />

        <Button
            android:id="@+id/btnAttendence"
            android:layout_width="match_parent"
            android:layout_height="100dip"
            android:text="ATTENDENCE"
            android:layout_marginStart="8dip"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toTopOf="@+id/btnFeedback"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnTicket"
            app:layout_constraintVertical_chainStyle="packed" />

        <Button
            android:id="@+id/btnFeedback"
            android:layout_width="match_parent"
            android:layout_height="100dip"
            android:text="FEEDBACK"
            android:layout_marginStart="8dip"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnAttendence"
            app:layout_constraintVertical_chainStyle="packed" />




    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>